<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".nevera.add_fila_neveraActivity"
        android:background="@color/colorPrimaryLight">

    <include android:id="@+id/my_toolbar7" layout="@layout/toolbar"/>

    <TextView
            android:text="@string/addFilaNevera_anadirAlimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="155dp" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar7" android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/alimento"
            android:background="@drawable/edit_text_redondo"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="@string/addFilaNevera_alimento" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/addFilaNevera_anadir"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/addAlimento_fila_nevera" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/boton_redondo_login_register"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.333"
            android:textColor="@android:color/white" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_tiposAlimentos"/>

    <Spinner
            android:id="@+id/spinner_tiposAlimentos"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/alimento" android:spinnerMode="dialog"/>

</android.support.constraint.ConstraintLayout>