            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tipoAlimento" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/alimento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Tipo de alimento"/>
