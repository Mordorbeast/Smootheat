<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".nevera.add_fila_neveraActivity">

    <include android:id="@+id/my_toolbar7" layout="@layout/toolbar"/>

    <TextView
            android:text="Añadir alimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="155dp" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/alimento"
            android:hint="Alimento" android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/titulo"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Añadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addAlimento_fila_nevera" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
            app:layout_constraintHorizontal_bias="0.333"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Spinner
            android:id="@+id/spinner_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="181dp"
            android:layout_marginEnd="181dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/alimento"/>


