<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aprende_a_cocinar.fila_listView_aprendeCocinar">

    <TextView
            android:text="Titulo del video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/tituloVideo" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="336dp" app:layout_constraintHorizontal_bias="0.0"/>
    <VideoView
            android:layout_width="380dp"
            android:layout_height="141dp"
            android:id="@+id/video_aprendeCocinar" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloVideo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>