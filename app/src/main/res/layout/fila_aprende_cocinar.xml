<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aprende_a_cocinar.filaListViewAprendeCocinar">

    <TextView
            android:text="@string/filaAprendeCocina_titulo_del_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/tituloVideo" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black"/>
    <VideoView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/video_aprendeCocinar" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloVideo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="@string/boton_reproducir"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/reproducirVideo_aprendeCocinar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/boton_redondo_login_register" android:textColor="@android:color/white"
            android:textAlignment="center"
    />
</android.support.constraint.ConstraintLayout>