<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryLight">

    <include android:id="@+id/my_toolbar7" layout="@layout/toolbar"/>

    <TextView
            android:text="@string/addFilaListaCompra_anadirAlimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar7" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textAlignment="center" android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/alimento"
            android:background="@drawable/edit_text_redondo"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="@string/addFilaListaCompra_alimento" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@android:color/black"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/addFilaListaCompra_anadir"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/addAlimento_fila_nevera"
            android:background="@drawable/boton_redondo_login_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/alimento" android:textColor="@android:color/white"/>

</android.support.constraint.ConstraintLayout>