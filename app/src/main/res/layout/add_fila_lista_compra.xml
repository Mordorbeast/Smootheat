<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include android:id="@+id/my_toolbar7" layout="@layout/toolbar"/>

    <TextView
            android:text="Añadir alimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="155dp" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/alimento"
            android:hint="Alimento" android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/titulo"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Añadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addAlimento_fila_nevera" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/alimento"/>

</android.support.constraint.ConstraintLayout>