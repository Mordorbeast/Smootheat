<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".menu.Pantalla_MenuPrincipal"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <include android:id="@+id/my_toolbar" layout="@layout/toolbar"/>

    <GridView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar" android:id="@+id/gridLayout_menu"
            android:numColumns="2" android:horizontalSpacing="0dp" android:verticalSpacing="50dp">
    </GridView>

</android.support.constraint.ConstraintLayout>


