<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pantalla_recetas">

    <include android:id="@+id/my_toolbar3" layout="@layout/activity_toolbar"/>

    <SearchView
            android:layout_width="200dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/buscador" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar3"/>
    <Spinner
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:id="@+id/filtro"
            android:visibility="visible" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buscador" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.462" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar3"/>

    <view class="android.support.v7.app.AlertController$RecycleListView"
          android:layout_width="match_parent"
          android:layout_height="0dp" android:id="@+id/listViewRecetas"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buscador">

    </view>
</android.support.constraint.ConstraintLayout>