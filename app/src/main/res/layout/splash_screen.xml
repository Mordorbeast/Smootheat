<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreen">


    <ImageView
            android:layout_width="291dp"
            android:layout_height="395dp" app:srcCompat="@drawable/logoreceta"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/nombreAPP"/>
    <TextView
            android:text="SMOOTHEAT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nombreAPP" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textColor="#8BC34A" android:textSize="50sp"
            android:textAlignment="center" android:textStyle="bold" android:textAllCaps="false"
            android:fontFamily="sans-serif"/>
</android.support.constraint.ConstraintLayout>